<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Sightings</h1>
    <h2>Sighting List</h2>
    <p>Date | Shape | City</p>
    <ul>
      <% sightings.forEach((sighting) => { %>
      <li>
        <a href="/sighting/<%= sighting.index %>"
          ><%= sighting.date_time %>, <%= sighting.shape %>, <%= sighting.city
          %>, <%= sighting.state %></a
        >
        <% if(source === 'root') { %>
        <form
          action="/sighting/<%= sighting.index %>?_method=DELETE"
          method="POST"
        >
          <input type="submit" value="Delete" />
        </form>
        <% } %>
      </li>
      <% }); %>
    </ul>
  </body>
</html>
