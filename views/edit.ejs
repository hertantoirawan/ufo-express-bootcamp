<html>
  <body>
    <form action="/sighting/<%= sighting.index %>?_method=PUT" method="POST">
      <label for="text">DESCRIPTION:</label><br />
      <input
        type="text"
        id="text"
        name="text"
        value="<%= sighting.text %>"
      /><br />
      <label for="date_time">DATE/TIME:</label><br />
      <input
        type="text"
        id="date_time"
        name="date_time"
        value="<%= sighting.date_time %>"
      /><br />
      <label for="city">CITY:</label><br />
      <input
        type="text"
        id="city"
        name="city"
        value="<%= sighting.city %>"
      /><br />
      <label for="state">STATE:</label><br />
      <input
        type="text"
        id="state"
        name="state"
        value="<%= sighting.state %>"
      /><br />
      <label for="shape">SHAPE:</label><br />
      <input
        type="text"
        id="shape"
        name="shape"
        value="<%= sighting.shape %>"
      /><br />
      <label for="duration">DURATION:</label><br />
      <input
        type="text"
        id="duration"
        name="duration"
        value="<%= sighting.duration %>"
      /><br />
      <input type="submit" value="Submit" />
    </form>
  </body>
</html>
