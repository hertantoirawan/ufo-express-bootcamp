<!DOCTYPE html>
<html lang="en">
  <%- include('header'); -%>
  <body>
    <%- include('navigation', { page: 'shapes' }); -%>
    <div class="container">
      <h2 class="mt-3">Sightings Shapes</h2>
      <div class="row row-cols-2">
        <% shapes.forEach((shape) => { %>
        <div class="col">
          <div class="card border-dark mb-3" style="max-width: 24rem">
            <div class="card-header bg-transparent border-dark">header</div>
            <div class="card-body text-secondary" style="transform: rotate(0)">
              <p class="card-text">
                <a
                  href="/shapes/<%= shape.toLowerCase() %>"
                  class="stretched-link read-more text-secondary"
                  ><%= shape %></a
                >
              </p>
            </div>
            <div class="card-footer bg-transparent border-dark">footer</div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
